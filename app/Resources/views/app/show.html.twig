{% extends 'layout.html.twig' %}

{% block body %}

    <div class="title">
        <h4 class="text-left">
            {{ product.name }}
        </h4>
    </div>

    <article class="pure-g padding-horizontal-lg">
        <div class="pure-u-1 pure-u-md-14-24">
            <div class="box-xs">

                <div class="box-object-inside">
                    <img src="holder.js/300x300">
                </div>
                <div class="padding-lg other-feautures">
                    {{ product.description }}
                </div>
            </div>
        </div>

        <div class="pure-u-1 pure-u-md-10-24">
            <div class="box-object-inside">

                <div class="price text-center">
                    {{ product.price }} â‚¬
                </div>

                <a href="" class="pure-button button-secondary btn-100">Add to cart</a>


                <div class="padding-vertical-lg other-feautures">
                    <div class="pure-g">

                        <div class="pure-u-8-24">
                            <b>Stock:</b>
                        </div>
                        <div class="pure-u-16-24">
                            {{ product.stock }} items
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>

{% endblock %}