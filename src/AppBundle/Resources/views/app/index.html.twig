{% extends 'layout.html.twig' %}

{% block body %}

    <div class="pure-g padding-horizontal-lg">

        {% for key, product in products %}
            <div class="pure-u-1 pure-u-md-8-24">
                <article class="box-xs">
                    <div class="box-object">
                        <div class="box-object-inside">
                            <img src="holder.js/300x300">
                        </div>
                        <div class="features">
                            <div class="pure-g">
                                <div class="pure-u-1">
                                    <div class="title">
                                        <h4>{{ product.name }}</h4>
                                        <p class="description">{{ product.description }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_start(formProducts[key],{'action': path('app_add_product', {id: product.id}) }) }}
                        <div class="features">
                            <div class="pure-g">
                                <div class="pure-u-12-24">
                                    <div class="price">
                                        {{ product.price }} â‚¬
                                    </div>
                                </div>
                                <div class="pure-u-12-24">
                                    <div class="text-right">
                                        {{ form_row(formProducts[key].quantity) }}
                                        {{ form_errors(formProducts[key].quantity) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="features">
                            <div class="pure-g">
                                <div class="pure-u-1">
                                    <input type="submit" value="Add to cart" class="pure-button button-secondary btn-100">
                                </div>
                            </div>
                        </div>
                        {{ form_end(formProducts[key]) }}
                    </div>
                </article>
            </div>

        {% endfor %}

    </div>

{% endblock %}
